<div class="well">
  <%= form_for @user do |f| %>
  <%= render 'shared/error_messages', postit_object: @user %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password%>
  </div>
  <br>
  <%= f.submit(@user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-success') %>
  <% end %>
</div>
