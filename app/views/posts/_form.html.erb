<div class="well">
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url%>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <div class="form-group">
      <%= f.label :categories %>
      <%# @categories.each do |category| %>
        <%#= check_box_tag "category_ids", category.name, class: 'checkbox inline' %>
        <%#= label_tag(:category, "#{category.name}") %>
      <%# end %>
      <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |cbox| %>
      <%= cbox.label(class: "checkbox inline") { cbox.check_box(class: "checkbox") + cbox.text} %>
      <% end %>
    </div>
  <br>
    <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary') %>

  <% end %>
</div>
