<%= render 'shared/content_title', title: 'All Posts'%>

<% @posts.each do |post| %>
<div class='row'>
  <div class='span8 well'>

    <%= render post.categories %>

    <h4><%= link_to post.title, post.url %></h4>
    <p><%= post.description %></p>
    <p>
      <span class='quiet'>post by</span> <%= post.creator.username %>
      <small>at <%= post.created_at %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post))%>
      </span>
    </small>
  </div>
</div>
<% end %>


<p>This is the Postit template. You've access the PostsController, index action. This is the index template. Find me under app/views/posts folder.</p>
<ul>
  <% @posts.each do |post| %>
  <li><%= link_to post.title, post_path(post) %></li>
  <% end %>
</ul>
