<div class='row'>

  <div class='row'>
    <div id="post_vote_error_<%= post.slug %>" class='alert alert-error' style="display: none">
      you can only vote once
    </div>
  </div>

  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>

    <br/>
    <span id='post_<%= post.slug %>_votes'><%= post.total_votes %> Votes</span>
    <br/>

    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, post_path(post) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class='quiet'>post by</span> <%= link_to post.creator.username, user_path(post.creator) %>
      <small>at <%= fix_time_format(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post))%>
      </span>
    </small>
  </div>
</div>
